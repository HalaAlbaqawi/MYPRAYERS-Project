<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_masjid"
    tools:context=".view.HomeFragment">

    <TextView
        android:id="@+id/gregorian_date_textView"
        android:layout_width="197dp"
        android:layout_height="137dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/hijri_date_textView"
        app:layout_constraintTop_toBottomOf="@+id/time_textView" />

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="325dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hijri_date_textView"
        android:layout_width="197dp"
        android:layout_height="137dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_textView" />

    <TextView
        android:id="@+id/hijri_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/hijri"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/hijri_date_textView"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="@+id/hijri_date_textView"
        app:layout_constraintTop_toTopOf="@+id/hijri_date_textView" />

    <TextView
        android:id="@+id/Gregorian_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/gregorian"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/gregorian_date_textView"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="@+id/gregorian_date_textView"
        app:layout_constraintTop_toTopOf="@+id/gregorian_date_textView" />


</androidx.constraintlayout.widget.ConstraintLayout>